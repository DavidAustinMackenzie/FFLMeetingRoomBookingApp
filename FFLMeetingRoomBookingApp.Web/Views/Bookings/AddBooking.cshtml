@model FFLMeetingRoomBookingApp.Web.Models.AddBookingViewModel

<h1>Add Booking</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">BookingDate</label>
        <input type="datetime-local" class="form-control" asp-for="BookingDate"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Meeting Room</label>
        <input type="text" class="form-control" asp-for="MeetingRoom"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Number of People</label>
        <input type="number" class="form-control" asp-for="NumberOfPeople"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Meeting Duration</label>
        <input type="number" class="form-control" asp-for="MeetingDuration"/>
    </div>

    <div class="mt-3">
        <select asp-for="BookedBy" asp-items="ViewBag.Users"></select>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>