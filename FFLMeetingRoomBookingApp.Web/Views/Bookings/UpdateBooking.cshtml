@{
}

@model FFLMeetingRoomBookingApp.Web.Modes.Entities.Booking

<h1>Update Booking</h1>

@if(Model is null)
{
    <p>No booking was found with this Id.</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">ID:</label>
            <input type="text" class="form-control" asp-for="BookingId" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">BookingDate</label>
            <input type="datetime-local" class="form-control" asp-for="BookingDate" />
        </div>

        <div class="mt-3">
            <label class="form-label">Meeting Room</label>
            <input type="text" class="form-control" asp-for="MeetingRoom" />
        </div>

        <div class="mt-3">
            <label class="form-label">Number of People</label>
            <input type="number" class="form-control" asp-for="NumberOfPeople" />
        </div>

        <div class="mt-3">
            <label class="form-label">Meeting Duration</label>
            <input type="number" class="form-control" asp-for="MeetingDuration" />
        </div>

        <div class="mt-3">
            <label class="form-label" for="BookedBy">Booked By:</label>
            <select asp-for="BookedBy" asp-items="ViewBag.Users">
                <option value="">-- Select User --</option>
            </select>
        </div>

        <div class="mt-3">
            <label class="form-label" for="BookedBy">Booked For:</label>
            <select asp-for="BookedFor" asp-items="ViewBag.Users">
                <option value="">-- Select User --</option>
            </select>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}