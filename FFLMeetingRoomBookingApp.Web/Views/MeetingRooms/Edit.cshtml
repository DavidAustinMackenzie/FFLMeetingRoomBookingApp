@model FFLMeetingRoomBookingApp.Web.Models.MeetingRoom

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Meeting Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MeetingRoomId" />
            <div class="mt-3">
                <label asp-for="MeetingRoomName" class="control-label">Meeting room name</label>
                <input asp-for="MeetingRoomName" class="form-control" />
                <span asp-validation-for="MeetingRoomName" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
