@model IEnumerable<FFLMeetingRoomBookingApp.Web.Models.MeetingRoom>

@{
    ViewData["Title"] = "Meeting Rooms";
}

<h1>Meeting rooms</h1>

@if(Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                   Meeting room name
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MeetingRoomName)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.MeetingRoomId">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.MeetingRoomId">Details</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.MeetingRoomId">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No meeting rooms to display.</p>
}
<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
