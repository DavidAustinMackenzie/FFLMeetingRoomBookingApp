@{
}

@model List<FFLMeetingRoomBookingApp.Web.Models.Entities.User>

<h1>Users</h1>
@if(@Model.Count > 0)
{
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Username</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Users" asp-action="UpdateUser" asp-route-id="@user.Id">Edit</a>
                </td>
            </tr>   
        }
    </tbody>
    </table>
}
else
{
    <p>No users to display.</p>
}
<a class="btn btn-primary" asp-controller="Users" asp-action="AddUser">Add User</a>